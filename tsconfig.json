{
    "compilerOptions": {
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "lib": ["ESNext", "dom"],
      "sourceMap": true,
      "target": "ESNext",
      "removeComments": true,
      "composite": true,
      "incremental": true,
      "declaration": true,
      "declarationMap": true,
      "jsx": "react"
    }
  }
  